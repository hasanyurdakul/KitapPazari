@model List<Product>

<div class="card shadow border-0 mb-4 ">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row  ">

            <div class="    mb-2 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary"> <i class="bi bi-plus-square-fill"></i>&ensp; Create New Product</a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Category</th>
                    <th>Description</th>
                    <th>ISBN</th>
                    <th>List Price</th>
                    <th>Price</th>
                    <th>Price 50+</th>
                    <th>Price 100+</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(x => x.Title))
                {
                    <tr>
                        <td>
                            @obj.Title
                        </td>
                        <td>
                            @obj.Author
                        </td>
                        <td>
                            @* TBA CATEGORY  *@
                        </td>
                        <td>
                            @obj.Description
                        </td>

                        <td>
                            @obj.ISBN
                        </td>
                        <td>
                            @obj.ListPrice
                        </td>
                        <td>
                            @obj.Price
                        </td>
                        <td>
                            @obj.Price50
                        </td>
                        <td>
                            @obj.Price100
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary  ">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger ">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



